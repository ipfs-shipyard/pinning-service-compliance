{
  "name": "@ipfs-shipyard/pinning-service-compliance",
  "version": "0.0.1",
  "description": "",
  "author": "Russell Dempsey <1173416+SgtPooki@users.noreply.github.com>",
  "license": "Apache-2.0 OR MIT",
  "homepage": "https://github.com/ipfs-shipyard/pinning-service-compliance#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ipfs-shipyard/pinning-service-compliance.git"
  },
  "bugs": {
    "url": "https://github.com/ipfs-shipyard/pinning-service-compliance/issues"
  },
  "keywords": [
    "ipfs"
  ],
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=7.0.0"
  },
  "main": "src/index.ts",
  "files": [
    "src",
    "dist",
    "downloaded"
  ],
  "bin": {
    "@ipfs-shipyard/pinning-service-compliance": "./dist/index.js"
  },
  "eslintConfig": {
    "extends": "ipfs"
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      [
        "@semantic-release/commit-analyzer",
        {
          "preset": "conventionalcommits",
          "releaseRules": [
            {
              "breaking": true,
              "release": "major"
            },
            {
              "revert": true,
              "release": "patch"
            },
            {
              "type": "feat",
              "release": "minor"
            },
            {
              "type": "fix",
              "release": "patch"
            },
            {
              "type": "chore",
              "release": "patch"
            },
            {
              "type": "docs",
              "release": "patch"
            },
            {
              "type": "test",
              "release": "patch"
            },
            {
              "scope": "no-release",
              "release": false
            }
          ]
        }
      ],
      [
        "@semantic-release/release-notes-generator",
        {
          "preset": "conventionalcommits",
          "presetConfig": {
            "types": [
              {
                "type": "feat",
                "section": "Features"
              },
              {
                "type": "fix",
                "section": "Bug Fixes"
              },
              {
                "type": "chore",
                "section": "Trivial Changes"
              },
              {
                "type": "docs",
                "section": "Trivial Changes"
              },
              {
                "type": "test",
                "section": "Tests"
              }
            ]
          }
        }
      ],
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/github",
      "@semantic-release/git"
    ]
  },
  "scripts": {
    "clean": "rimraf downloaded/*.yaml generated dist node_modules",
    "test": "aegir test -t node",
    "setup:download-spec": "ts-node ./src/download-spec.ts",
    "build": "run-s setup:download-spec build:aegir",
    "build:aegir": "aegir build",
    "release": "npm run build && aegir release",
    "cli": "node dist/src/index.js"
  },
  "devDependencies": {
    "@types/hapi__joi": "^17.1.8",
    "@types/marked": "^4.0.3",
    "@types/marked-terminal": "^3.1.3",
    "@types/node": "^17.0.25",
    "@types/uuid": "^8.3.4",
    "@types/yargs": "^17.0.9",
    "aegir": "^36.1.3",
    "chalk": "^4.1.2",
    "check-aegir-project": "^1.1.1",
    "cp-cli": "^2.0.0",
    "ipfs-core-types": "^0.10.1",
    "marked": "^4.0.12",
    "marked-terminal": "^5.1.1",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.2"
  },
  "dependencies": {
    "@hapi/joi": "^14.5.0",
    "@ipfs-shipyard/pinning-service-client": "^0.0.4",
    "fetch-ponyfill": "^7.1.0",
    "go-ipfs": "^0.12.1",
    "ipfs": "^0.62.1",
    "ipfs-core": "^0.14.1",
    "ipfs-http-client": "^56.0.1",
    "ipfsd-ctl": "^10.0.6",
    "oas2joi": "^2.0.2",
    "p-queue": "^6.6.0",
    "uuid": "^8.3.2",
    "winston": "^3.7.2",
    "yargs": "^17.3.1"
  },
  "todo": [
    "test happy paths for each method in the spec: 1 for each right now"
  ]
}
