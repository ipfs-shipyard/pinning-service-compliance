{
  "name": "@ipfs-shipyard/pinning-service-compliance",
  "version": "1.8.0",
  "description": "",
  "author": "Russell Dempsey <1173416+SgtPooki@users.noreply.github.com>",
  "license": "Apache-2.0 OR MIT",
  "homepage": "https://github.com/ipfs-shipyard/pinning-service-compliance#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ipfs-shipyard/pinning-service-compliance.git"
  },
  "bugs": {
    "url": "https://github.com/ipfs-shipyard/pinning-service-compliance/issues"
  },
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "keywords": [
    "ipfs"
  ],
  "bin": "./dist/src/index.js",
  "type": "module",
  "types": "./dist/src/index.d.ts",
  "files": [
    "src",
    "dist",
    "!dist/test",
    "!**/*.tsbuildinfo"
  ],
  "exports": {
    ".": {
      "types": "./dist/src/index.d.ts",
      "import": "./dist/src/index.js"
    }
  },
  "eslintConfig": {
    "extends": "ipfs",
    "parserOptions": {
      "project": true,
      "sourceType": "module"
    }
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      [
        "@semantic-release/commit-analyzer",
        {
          "preset": "conventionalcommits",
          "releaseRules": [
            {
              "breaking": true,
              "release": "major"
            },
            {
              "revert": true,
              "release": "patch"
            },
            {
              "type": "feat",
              "release": "minor"
            },
            {
              "type": "fix",
              "release": "patch"
            },
            {
              "type": "docs",
              "release": "patch"
            },
            {
              "type": "test",
              "release": "patch"
            },
            {
              "type": "deps",
              "release": "patch"
            },
            {
              "scope": "no-release",
              "release": false
            }
          ]
        }
      ],
      [
        "@semantic-release/release-notes-generator",
        {
          "preset": "conventionalcommits",
          "presetConfig": {
            "types": [
              {
                "type": "feat",
                "section": "Features"
              },
              {
                "type": "fix",
                "section": "Bug Fixes"
              },
              {
                "type": "chore",
                "section": "Trivial Changes"
              },
              {
                "type": "docs",
                "section": "Documentation"
              },
              {
                "type": "deps",
                "section": "Dependencies"
              },
              {
                "type": "test",
                "section": "Tests"
              }
            ]
          }
        }
      ],
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/github",
      "@semantic-release/git"
    ]
  },
  "scripts": {
    "clean": "aegir clean downloaded/*.yaml generated dist",
    "test": "run-s dep-check lint",
    "lint": "aegir lint",
    "build": "aegir build",
    "start": "node dist/src/index.js",
    "dep-check": "aegir dep-check",
    "dev-start": "NODE_OPTIONS='--unhandled-rejections=strict --trace-atomics-wait --trace-deprecation --trace-exit --trace-sigint --trace-uncaught --trace-warnings' node dist/src/index.js",
    "release": "aegir release",
    "rebuild": "run-s clean -- node_modules && npm install && run-s build"
  },
  "dependencies": {
    "@hapi/joi": "^17.1.1",
    "@ipfs-shipyard/pinning-service-client": "^2.0.0",
    "chalk": "^5.3.0",
    "git-rev": "^0.2.1",
    "ipfsd-ctl": "^14.1.0",
    "kubo": "^0.29.0",
    "kubo-rpc-client": "^4.1.1",
    "marked": "^4.0.16",
    "marked-terminal": "^5.1.1",
    "multiformats": "^13.3.0",
    "oas2joi": "^2.0.2",
    "p-defer": "^4.0.1",
    "p-queue": "^7.2.0",
    "uuid": "^8.3.2",
    "winston": "^3.7.2",
    "yargs": "^17.5.1"
  },
  "devDependencies": {
    "@types/git-rev": "^0.2.0",
    "@types/hapi__joi": "^17.1.8",
    "@types/marked": "^4.0.3",
    "@types/marked-terminal": "^3.1.3",
    "@types/node": "^18.7.6",
    "@types/uuid": "^8.3.4",
    "@types/yargs": "^17.0.10",
    "aegir": "^44.1.1",
    "npm-run-all": "^4.1.5"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=7.0.0"
  }
}
