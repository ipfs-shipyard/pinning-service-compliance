{
  // "extends": "aegir/src/config/tsconfig.aegir.json",
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "Node",
    "outDir": "dist",
    "composite": false,
    "skipLibCheck": true,
    // "baseUrl": ".",
    // "paths": {
    //   "*": [
    //     "./types/*"
    //   ]
    // },
    "target": "ES2020",
    "lib": [
      "es2020",
      "es2020.promise",
      "es2020.string",
      "es2020.bigint",
      "dom",
      "dom.iterable"
    ],
    "types": ["@ipfs-shipyard/pinning-service-client", "node", "multiformats"],
    "allowSyntheticDefaultImports": true,

        "esModuleInterop": true,
        // "moduleResolution": "node",
        "noImplicitReturns": false,
        "noFallthroughCasesInSwitch": true,
        "noUnusedLocals": true,
        "noUnusedParameters": false,
        "importsNotUsedAsValues": "error",
        "forceConsistentCasingInFileNames": true,
        // "skipLibCheck": true,
        "stripInternal": true,
        "resolveJsonModule": true,
        "strictNullChecks": true
  },
  "include": [
    "test", // remove this line if you don't want to type-check tests
    "src",
    "downloaded"
  ],
  "exclude": [
    "node_modules"
  ],
  "ts-node": {
      "transpileOnly": true,
      "compilerOptions": {
        // "module": "ES2020",
    // "moduleResolution": "Node",
      }
  }
}
